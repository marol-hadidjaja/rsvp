<!DOCTYPE html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RSVP</title>

    <%= stylesheet_link_tag '/stylesheets/foundation.min.css' %>
    <%= stylesheet_link_tag '/stylesheets/style.css' %>
    <%= javascript_include_tag '/javascripts/modernizr.custom.86080.js' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="content">
      <% if @event.present? %>
        <ul class="cb-slideshow">
          <% @event.images.each do |image| %>
            <li><span style="background-image: url(<%= image.file.url %>)"><%= File.basename(image.file_file_name, ".*") %></span><div></div></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="input">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <% if @event.present? %>
            <div class="medium-12 columns intro">
              <h5>Join with <br><strong><%= @event.name %></strong></h5>
              <h6>Held on <strong><%= @event.the_day %></h6>
            </div>
          <% end %>

          <div class="medium-12 columns">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, placeholder: "Your invited email" %>

            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

            <%# if devise_mapping.rememberable? -%>
                <!--<div class="field">-->
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
                <!--</div>-->
            <%# end -%>

            <div class="actions">
              <%= f.submit "LOGIN", class: "button" %>
            </div>
          </div><!-- .medium-12.columns -->
        </div><!-- .row -->
      <% end %>

      <%#= render "devise/shared/links" %>
    </div><!-- .input -->
  </body>
</html>
