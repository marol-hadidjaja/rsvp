<!DOCTYPE html>
<html>
  <head>
    <title>RSVP</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= stylesheet_link_tag '/stylesheets/foundation.min.css', '/stylesheets/foundation-datepicker.min.css' %>
    <%= javascript_include_tag '/javascripts/jquery.js', '/javascripts/foundation.min.js', '/javascripts/foundation-datepicker.min.js' %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <%= csrf_meta_tags %>
    <script>
      $(document).ready(function(){
        $(document).foundation();
      });
    </script>
  </head>

  <body>
    <%= link_to "Home", root_path %>
    <%= link_to "Events", events_path %>
    <%#= link_to "Invitees", invitees_path %>
    <%#= link_to "Invitation", invitation_path %>
    <%= current_user.email %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %><br/>
    <%= yield %>
  </body>
</html>
